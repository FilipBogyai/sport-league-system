<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">

	<display-name>SportLeagueSystem</display-name>

	<!-- Change to "Production" when you are ready to deploy -->
	<context-param>
		<param-name>javax.faces.PROJECT_STAGE</param-name>
		<param-value>Development</param-value>
	</context-param>

	<!-- Welcome page -->
	<welcome-file-list>
		<welcome-file>login.xhtml</welcome-file>
	</welcome-file-list>

	<!-- JSF mapping -->
	<servlet>
		<servlet-name>Faces Servlet</servlet-name>
		<servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>

	<!-- Map these files with JSF -->
	<servlet-mapping>
		<servlet-name>Faces Servlet</servlet-name>
		<url-pattern>/faces/*</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>Faces Servlet</servlet-name>
		<url-pattern>*.jsf</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>Faces Servlet</servlet-name>
		<url-pattern>*.faces</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>Faces Servlet</servlet-name>
		<url-pattern>*.xhtml</url-pattern>
	</servlet-mapping>

	<security-constraint>
		<display-name>allowed content</display-name>
		<web-resource-collection>
			<web-resource-name>allowed</web-resource-name>
			<url-pattern>/javax.faces.resource/*</url-pattern>
			<url-pattern>/resources/*</url-pattern>
			<url-pattern>/login*</url-pattern>
			<url-pattern>/register*</url-pattern>
			<url-pattern>/accounts/formPrincipal.xhtml</url-pattern>
		</web-resource-collection>
	</security-constraint>

	<security-constraint>
		<display-name>users section</display-name>
		<web-resource-collection>
			<web-resource-name>users</web-resource-name>
			<url-pattern>/users/*</url-pattern>
		</web-resource-collection>
		<auth-constraint>
			<role-name>ADMIN</role-name>
		</auth-constraint>
	</security-constraint>

	

	<login-config>
		<auth-method>FORM</auth-method>
		<realm-name>SportLeagueSystem</realm-name>
		<form-login-config>
			<form-login-page>/login.xhtml</form-login-page>
			<form-error-page>/login.xhtml</form-error-page>
		</form-login-config>
	</login-config>

	<security-role>
		<role-name>PLAYER</role-name>
	</security-role>
	<security-role>
		<role-name>LEAGUE_SUPERVISOR</role-name>
	</security-role>
	<security-role>
		<role-name>ADMIN</role-name>
	</security-role>
</web-app>